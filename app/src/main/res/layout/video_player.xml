<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- made by Berat SahintÃ¼rk-->
    <VideoView
        android:id="@+id/videoView2"
        android:layout_width="323dp"
        android:layout_height="257dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/video_window"
        android:paddingLeft="4sp"
        android:paddingTop="4sp"
        android:paddingRight="4sp"

        android:paddingBottom="4sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="327dp"
        android:layout_height="37dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/berat_show"
        android:textColor="#FEFEFE"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="327dp"
        android:layout_height="90dp"
        android:background="@drawable/login_window"
        android:paddingLeft="12sp"
        android:paddingTop="12sp"
        android:paddingRight="12sp"
        android:paddingBottom="12sp"
        android:textColor="#FAF9F9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

    <Button
        android:id="@+id/vollbild"
        android:layout_width="413dp"
        android:layout_height="50dp"
        android:text="@string/fullscreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/Description"
        app:layout_constraintEnd_toEndOf="@+id/Description"
        app:layout_constraintTop_toBottomOf="@+id/videoView2"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Publisher"
        android:layout_width="173dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/Description"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/videoView2"
        app:layout_constraintVertical_bias="0.517" />

    <SeekBar
        android:id="@+id/Time"
        android:layout_width="280dp"
        android:layout_height="17dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/videoView2"
        app:layout_constraintEnd_toEndOf="@+id/videoView2"
        app:layout_constraintStart_toStartOf="@+id/videoView2" />

    <TextView
        android:id="@+id/Text_time"
        android:layout_width="45dp"
        android:layout_height="16dp"
        android:layout_marginBottom="5dp"
        android:text="20:10"
        android:textColor="#F6F3F3"
        app:layout_constraintBottom_toTopOf="@+id/videoView2"
        app:layout_constraintStart_toEndOf="@+id/Time" />

    <ImageView
        android:id="@+id/Share"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"

        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/Description"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/videoView2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="?attr/actionModeShareDrawable" />

    <ImageView
        android:id="@+id/Report"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/Description"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

</androidx.constraintlayout.widget.ConstraintLayout>